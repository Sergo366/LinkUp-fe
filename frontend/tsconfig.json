{
	"compilerOptions": {
		"target": "es5",                     /* Set the target ECMAScript version */
		"lib": ["dom", "es2015", "es2017"],  /* Include necessary libraries */
		"jsx": "react",                      /* Specify JSX factory (e.g., React.createElement) */
		"module": "esnext",                  /* Specify module system (e.g., 'commonjs' or 'esnext') */
		"moduleResolution": "node",          /* Specify module resolution strategy */
		"strict": true,                      /* Enable all strict type-checking options */
		"esModuleInterop": true,             /* Allow default imports from modules with no default export */
		"skipLibCheck": true,                /* Skip type checking of declaration files */
		"forceConsistentCasingInFileNames": true, /* Enforce consistent casing in file names */
		"isolatedModules": true,             /* Ensure each file is a separate module (for better type-checking) */
		"noEmit": true,                      /* Do not emit output files */
		"jsxImportSource": "react",          /* Specify the import source of the JSX factory when using automatic JSX runtime (React 17+) */
		"resolveJsonModule": true,           /* Enable importing JSON modules directly */
		"baseUrl": ".",                      /* Base directory to resolve non-relative module names */
		"paths": {
			"*": ["src/*"]                     /* Allow absolute imports from the 'src' directory */
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],  /* Include TypeScript and TypeScript React files in compilation */
	"exclude": ["node_modules", "build"]         /* Exclude specified directories from compilation */
}
